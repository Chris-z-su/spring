<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--通过set方式给userService注入userDao-->
    <bean id="userService" class="com.shubao.service.impl.UserServiceImpl">
        <property name="userDao" ref="userDao" />
        <property name="roleDao" ref="roleDao" />
    </bean>

    <!--p标签注入方式-->
    <!--<bean id="userService" class="com.shubao.service.impl.UserServiceImpl" p:userDao-ref="userDao"></bean>-->

    <!--有参构造注入方式-->
    <!--<bean id="userService" class="com.shubao.service.impl.UserServiceImpl">-->
    <!--<constructor-arg name="userDao" ref="userDao"></constructor-arg>-->
    <!--</bean>-->

    <!--  配置RoleService  -->
    <bean id="roleService" class="com.shubao.service.impl.RoleServiceImpl">
        <property name="roleDao" ref="roleDao" />
    </bean>

    <!--  配置ExceptionService  -->
    <bean id="exceptionService" class="com.shubao.service.impl.ExceptionServiceImpl" />

</beans>